# Elastic APM Configuration
# Copy this file to .env and update with your actual values

# APM Service Name (identifies your application in APM)
ELASTIC_APM_SERVICE_NAME=my-python-service

# APM Server URL (your Elastic APM server endpoint)
ELASTIC_APM_SERVER_URL=http://localhost:8200

# APM Secret Token (authentication token for APM server)
# Leave empty if your APM server doesn't require authentication
ELASTIC_APM_SECRET_TOKEN=

# Environment (development, staging, production, etc.)
ENVIRONMENT=development

# APM Debug Mode (set to 'false' in production)
ELASTIC_APM_DEBUG=true

# Celery Configuration (for celery_worker_apm.py)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Database Configuration (if using PostgreSQL instead of SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Optional: APM Transaction Sample Rate (0.0 to 1.0)
# ELASTIC_APM_TRANSACTION_SAMPLE_RATE=1.0

# Optional: APM Capture Body (off, errors, transactions, all)
# ELASTIC_APM_CAPTURE_BODY=all

# Optional: APM Stack Trace Limit
# ELASTIC_APM_STACK_TRACE_LIMIT=50
